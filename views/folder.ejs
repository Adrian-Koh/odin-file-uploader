<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= folder.name %></title>
  </head>
  <body>
    <%- include('navBar', links); %>
    <div class="content">
      <h1><%= folder.name %></h1>
      <% if (locals.files) { %>
      <h2>Files</h2>
      <ul>
        <% for (const file of files) { %>
        <li class="list-item">
          <span><%= file.name %></span
          ><a class="details-link" href="/file/<%= file.id %>">Details</a>
        </li>
        <% } %>
      </ul>
      <% } %>
    </div>
  </body>
</html>
