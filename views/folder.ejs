<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= folder.name %></title>
  </head>
  <body>
    <%- include('navBar', links); %>
    <div class="content">
      <h1><%= folder.name %></h1>
      <% if (locals.files) { if (files.length > 0) { %>
      <h2>Files</h2>
      <p>Click on file to view its details</p>
      <% } %>
      <ul class="files">
        <% for (const file of files) { %>
        <li class="list-item file-card">
          <a class="details-link" href="/file/<%= file.id %>"
            ><img src="/file-document.svg" alt="file" class="file-icon" />
            <span><%= file.name %></span></a
          >
        </li>
        <% } %>
      </ul>
      <% } %>
    </div>
  </body>
</html>
